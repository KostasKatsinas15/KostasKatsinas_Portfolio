<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - KostasKatsinas</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/KostasKatsinas.Portfolio.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    </head>

    <body>

        @RenderBody()

        <footer class="footer">

            <div class="container text-center">
                <div class="row justify-content-center">

                    <div class="col">
                        <a href="~/documents/CV_DigitalProject-ProductManager_KostasKatsinas_en.pdf" download class="round-element s-block">
                            <img src="~/svg/Icon_CV.svg" alt="Icon CV 1" class="svg" />
                        </a>
                        <p-body>Download my CV</p-body>
                    </div>

                    <div class="col">
                        <a href="https://www.artstation.com/kostaskatsinas15" target="_blank" class="round-element s-block">
                            <img src="~/svg/Icon_Projects.svg" alt="Icon Pencil 1" class="svg" />
                        </a>
                        <p-body>Explore my Projects</p-body>
                    </div>

                    <div class="col">
                        <a href="#" id="copyEmail" class="round-element s-block">
                            <img src="~/svg/Icon_Email.svg" alt="Icon Email 1" class="svg-mail" />
                        </a>
                        <p-body>Send me an Email</p-body>
                    </div>
                    <div id="emailCopiedOverlay" style="display: none; position:fixed;">
                        <p-bold>Email copied</p-bold>
                    </div>

                    <div class="col">
                        <a href="https://www.linkedin.com/in/kostaskatsinas15/" target="_blank" class="round-element s-block">
                            <img src="~/svg/Icon_LinkedIn.svg" alt="Icon Linkedin 1" class="svg" />

                        </a>
                        <p-body>Visit me on Linkedin</p-body>
                    </div>

                </div>
            </div>

@*             <div class="container">
                &copy; 2024 - KostasKatsinas v.1.0
            </div> *@
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    </body>

    <script>
        document.getElementById('copyEmail').addEventListener('click', function (event) {
            event.preventDefault();

            navigator.clipboard.writeText('kostaskatsinas15@gmail.com').then(function () {
                var overlay = document.getElementById('emailCopiedOverlay');
                overlay.style.display = 'block';

                setTimeout(function () {
                    overlay.style.display = 'none';
                }, 2000);
            }, function (err) {
                console.error('Could not copy text: ', err);
            });
        });
    </script>


</html>